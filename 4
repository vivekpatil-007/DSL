undo_stack = []  
redo_stack = [] 
document = ""    
def make_change(new_text):
    global document
    undo_stack.append(document)   
    document += new_text
    redo_stack.clear()           
    print("Change applied successfully!")
def undo_action():
    global document
    if not undo_stack:
        print("Nothing to undo!")
    else:
        redo_stack.append(document)  
        document = undo_stack.pop()  
        print("Undo successful!")
def redo_action():
    global document
    if not redo_stack:
        print("Nothing to redo!")
    else:
        undo_stack.append(document)  
        document = redo_stack.pop()   
        print("Redo successful!")
def display_document():
    print("\n--- Current Document State ---")
    print(document if document else "(empty)")
    print("-------------------------------\n")
    
while True:
    print("===== Text Editor Menu =====")
    print("1. Make a Change")
    print("2. Undo Action")
    print("3. Redo Action")
    print("4. Display Document State")
    print("5. Exit")
    
    choice = input("Enter your choice: ")
    
    if choice == '1':
        new_text = input("Enter text to add: ")
        make_change(new_text)
    elif choice == '2':
        undo_action()
    elif choice == '3':
        redo_action()
    elif choice == '4':
        display_document()
    elif choice == '5':
        print("Exiting... Goodbye!")
        break
    else:
        print("Invalid choice! Please try again.")
